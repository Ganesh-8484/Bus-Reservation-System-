function validation()

	{

	
	
	var from1=document.forms["myform"]["from"].value;
	
	var to1=document.forms["myform"]["to"].value;
	var a=document.forms["myform"]["departing"].value;
	var r=document.forms["myform"]["returning"].value;
	

	if(from1==NULL || to1==NULL || a==NULL || r==NULL)
	{	
		alert("please Fill all Fields..");
		return false;
	}	
	else
		
	{			
		return true;
	
	}
}

